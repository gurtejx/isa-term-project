{
    "version": 2,
    "builds": [
      {
        "src": "server.js", 
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server.js"
      }
    ],
    "env": {
      "MONGODB_URI": "@MONGODB_URI",
      "NODE_SESSION_SECRET" :"@NODE_SESSION_SECRET" ,
      "JWT_SECRET": "@JWT_SECRET",
      "EMAIL_SERVICE_PROVIDER": "@EMAIL_SERVICE_PROVIDER",
      "APP_EMAIL": "@APP_EMAIL",
      "APP_EMAIL_PASSWORD": "@APP_EMAIL_PASSWORD"
    }
  }